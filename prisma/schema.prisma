// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     Role     @default(CASHIER)
  createdAt DateTime @default(now())

  orders   Order[]
}



// Enums for fixed values
enum Role {
  ADMIN
  CASHIER
  WAITER
}

